<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE relationships SYSTEM "relationship-types.dtd">

<!-- Don't forget to call the following command after committing changes:
cat  /data/dspace-angular-dspace-8.0/config/relationship-types.xml > ../dspace/config/entities/relationship-types.xml -->


<relationships>
    <!-- OrgUnit and Person relationship -->
    <type>
        <leftType>OrgUnit</leftType>
        <rightType>Person</rightType>
        <leftwardType>hasPerson</leftwardType>
        <rightwardType>isPartOfOrgUnit</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>1</min>
        </rightCardinality>
        <copyToRight>true</copyToRight> <!-- Copy OrgUnit metadata to Person -->
    </type>

    <!-- Person creates various entities -->
    <type>
        <leftType>Person</leftType>
        <rightType>DQCheck</rightType>
        <leftwardType>createsDQCheck</leftwardType>
        <rightwardType>isCreatedByPerson</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>1</min>
        </rightCardinality>
    </type>
    <type>
        <leftType>Person</leftType>
        <rightType>Documentation</rightType>
        <leftwardType>createsDocumentation</leftwardType>
        <rightwardType>isCreatedByPerson</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>1</min>
        </rightCardinality>
    </type>
    <type>
        <leftType>Person</leftType>
        <rightType>Phenotype</rightType>
        <leftwardType>createsPhenotype</leftwardType>
        <rightwardType>isCreatedByPerson</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>1</min>
        </rightCardinality>
    </type>
    <type>
        <leftType>Person</leftType>
        <rightType>Study</rightType>
        <leftwardType>conductsStudy</leftwardType>
        <rightwardType>isConductedByPerson</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>1</min>
        </rightCardinality>
    </type>
    <type>
        <leftType>Person</leftType>
        <rightType>ConceptSet</rightType>
        <leftwardType>createsConceptSet</leftwardType>
        <rightwardType>isCreatedByPerson</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>1</min>
        </rightCardinality>
        <copyToRight>true</copyToRight> <!-- Copy Person metadata to ConceptSet -->
    </type>

    <!-- Study relationships -->
    <type>
        <leftType>Study</leftType>
        <rightType>Phenotype</rightType>
        <leftwardType>resultsInPhenotype</leftwardType>
        <rightwardType>isResultOfStudy</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>0</min>
        </rightCardinality>
    </type>
    <type>
        <leftType>Study</leftType>
        <rightType>ConceptSet</rightType>
        <leftwardType>resultsInConceptSet</leftwardType>
        <rightwardType>isResultOfStudy</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>0</min>
        </rightCardinality>
        <copyToRight>true</copyToRight> <!-- Copy Study metadata to ConceptSet -->
    </type>

    <!-- ConceptSet and Phenotype relationship -->
    <type>
        <leftType>ConceptSet</leftType>
        <rightType>Phenotype</rightType>
        <leftwardType>informsPhenotype</leftwardType>
        <rightwardType>isInformedByConceptSet</rightwardType>
        <leftCardinality>
            <min>0</min>
        </leftCardinality>
        <rightCardinality>
            <min>0</min>
        </rightCardinality>
    </type>
</relationships>
